<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrainingTimeActivity"
    android:padding="32dp">

    <ImageView
        android:id="@+id/img_select_time"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="36dp"
        android:src="@mipmap/ic_clock" />

    <TextView
        android:id="@+id/txt_select_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_select_time"
        android:layout_marginTop="42dp"
        android:text="@string/how_long_do_you_want_to_train"
        android:textColor="@color/teal_700"
        android:textSize="32sp" />

    <Spinner
        android:id="@+id/spn_time"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@+id/txt_select_time"
        android:layout_marginStart="50dp"
        android:layout_marginTop="48dp"
        android:dropDownWidth="match_parent"
        android:entries="@array/trainingTimeType"
        android:layout_marginLeft="50dp" />

    <Spinner
        android:id="@+id/spn_order_time"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@+id/spn_time"
        android:layout_marginStart="50dp"
        android:layout_marginTop="38dp"
        android:dropDownWidth="match_parent"
        android:entries="@array/trainingOrderType"
        android:layout_marginLeft="50dp" />

    <Button
        android:id="@+id/btn_submit_time"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/finish"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:background="@color/teal_700"
        android:layout_below="@id/spn_order_time"
        android:layout_marginTop="54dp"/>

</RelativeLayout>